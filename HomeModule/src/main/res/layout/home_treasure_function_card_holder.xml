<?xml version="1.0" encoding="utf-8"?>
<com.dianxinos.optimizer.view.FourThreeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/function_card_background"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@color/common_blue"
    android:orientation="vertical">

    <TextView
        android:id="@+id/function_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        tools:text="title" />

    <FrameLayout
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/feed_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            tools:text="title" />

        <TextView
            android:id="@+id/function_card_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:background="@drawable/light_ripple"
            tools:text="7" />
    </FrameLayout>


</com.dianxinos.optimizer.view.FourThreeLinearLayout>
