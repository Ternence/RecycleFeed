<?xml version="1.0" encoding="utf-8"?>
<com.dianxinos.optimizer.view.FourThreeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/function_card_background"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@color/common_blue"
    android:elevation="2dp"
    android:foreground="@drawable/light_ripple"
    android:orientation="vertical"
    android:stateListAnimator="@animator/button_raise"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <TextView
        android:id="@+id/function_card_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:breakStrategy="simple"
        android:ellipsize="end"
        tools:text="title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/function_card_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:background="@drawable/light_ripple"
            android:gravity="center_vertical"
            tools:text="7" />

    </FrameLayout>

</com.dianxinos.optimizer.view.FourThreeLinearLayout>
